<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/calculator"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/buttonshape"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:id="@+id/resultField"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#14FF8D"
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@+id/button33"
            app:layout_constraintStart_toStartOf="@+id/numberField"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/operationField"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#14FF8D"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@+id/numberField"
            app:layout_constraintStart_toEndOf="@+id/button22"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/numberField"
            style="@android:style/Widget.EditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:autofillHints="Ввод"
            android:background="#FFFFFF"
            android:fontFamily="@font/ribeye"
            android:inputType="numberSigned|number|numberDecimal|numberPassword|phone"
            android:textAppearance="@style/Theme.Lesson2"
            android:textColor="#000000"
            android:textSize="30sp"
            android:typeface="normal"
            app:layout_constraintBottom_toTopOf="@+id/button22"
            app:layout_constraintEnd_toEndOf="@id/button33"
            app:layout_constraintStart_toStartOf="@id/button11"
            tools:ignore="LabelFor" />

        <Button
            android:id="@+id/button11"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="135dp"
            android:layout_height="105dp"
            android:onClick="onNumberClick"
            android:shadowColor="#000000"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="@string/_1"
            android:textColor="@color/white"
            android:textSize="30sp"
            app:layout_constraintEnd_toStartOf="@+id/button22"
            app:layout_constraintTop_toTopOf="@+id/button22" />

        <Button
            android:id="@+id/button22"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="135dp"
            android:layout_height="105dp"
            android:onClick="onNumberClick"
            android:shadowColor="#000000"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="@string/_2"
            android:textColor="@color/white"
            android:textSize="30sp"
            app:layout_constraintBottom_toTopOf="@+id/button25"
            app:layout_constraintStart_toStartOf="@+id/button25" />

        <Button
            android:id="@+id/button33"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="135dp"
            android:layout_height="105dp"
            android:onClick="onNumberClick"
            android:shadowColor="#000000"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="@string/_3"
            android:textColor="@color/white"
            android:textSize="30sp"
            app:layout_constraintStart_toEndOf="@+id/button22"
            app:layout_constraintTop_toTopOf="@+id/button22" />

        <Button
            android:id="@+id/button14"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="135dp"
            android:layout_height="105dp"
            android:onClick="onNumberClick"
            android:shadowColor="#000000"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="@string/_4"
            android:textColor="@color/white"
            android:textSize="30sp"
            app:layout_constraintRight_toLeftOf="@+id/button25"
            app:layout_constraintTop_toTopOf="@+id/button25" />

        <Button
            android:id="@+id/button25"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="135dp"
            android:layout_height="105dp"
            android:onClick="onNumberClick"
            android:shadowColor="#000000"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="@string/_5"
            android:textColor="@color/white"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.351" />

        <Button
            android:id="@+id/button36"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="135dp"
            android:layout_height="105dp"
            android:onClick="onNumberClick"
            android:shadowColor="#000000"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="@string/_6"
            android:textColor="@color/white"
            android:textSize="30sp"
            app:layout_constraintLeft_toRightOf="@+id/button25"
            app:layout_constraintTop_toTopOf="@+id/button25" />

        <Button
            android:id="@+id/button17"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="135dp"
            android:layout_height="105dp"
            android:onClick="onNumberClick"
            android:shadowColor="#000000"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="@string/_7"
            android:textColor="@color/white"
            android:textSize="30sp"
            app:layout_constraintRight_toLeftOf="@+id/button28"
            app:layout_constraintTop_toTopOf="@+id/button28" />

        <Button
            android:id="@+id/button28"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="135dp"
            android:layout_height="105dp"
            android:onClick="onNumberClick"
            android:shadowColor="#000000"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="@string/_8"
            android:textColor="@color/white"
            android:textSize="30sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="@+id/button25"
            app:layout_constraintTop_toBottomOf="@+id/button25" />

        <Button
            android:id="@+id/button3div"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="100dp"
            android:layout_height="105dp"
            android:onClick="onOperationClick"
            android:shadowColor="#000000"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="@string/divis"
            android:textColor="@color/white"
            android:textSize="30sp"
            app:layout_constraintLeft_toRightOf="@+id/button2sub"
            app:layout_constraintTop_toBottomOf="@+id/button28"
            />

        <Button
            android:id="@+id/button3multip"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="100dp"
            android:layout_height="105dp"
            android:onClick="onOperationClick"
            android:shadowColor="#000000"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="@string/multip"
            android:textColor="@color/white"
            android:textSize="30sp"
            app:layout_constraintLeft_toRightOf="@+id/button1summ"
            app:layout_constraintTop_toBottomOf="@+id/button2sub" />

        <Button
            android:id="@+id/button29"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="135dp"
            android:layout_height="105dp"
            android:onClick="onNumberClick"
            android:shadowColor="#000000"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="@string/_9"
            android:textColor="@color/white"
            android:textSize="30sp"
            app:layout_constraintLeft_toRightOf="@+id/button28"
            app:layout_constraintTop_toTopOf="@+id/button28"
            />

        <Button
            android:id="@+id/button10"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="100dp"
            android:layout_height="105dp"
            android:onClick="onNumberClick"
            android:shadowColor="#000000"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="@string/_0"
            android:textColor="@color/white"
            android:textSize="30sp"
            app:layout_constraintLeft_toLeftOf="@+id/button17"
            app:layout_constraintTop_toBottomOf="@+id/button17" />

        <Button
            android:id="@+id/button3comma"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="100dp"
            android:layout_height="105dp"
            android:onClick="onNumberClick"
            android:shadowColor="#000000"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="@string/comma"
            app:layout_constraintLeft_toRightOf="@+id/button3multip"
            app:layout_constraintTop_toBottomOf="@+id/button3div" />

        <Button
            android:id="@+id/button1summ"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="100dp"
            android:layout_height="105dp"
            android:onClick="onOperationClick"
            android:shadowColor="#000000"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="@string/summ"
            android:textColor="@color/white"
            android:textSize="30sp"
            app:layout_constraintLeft_toLeftOf="@+id/button10"
            app:layout_constraintTop_toBottomOf="@+id/button10" />

        <Button
            android:id="@+id/button3equal"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="100dp"
            android:layout_height="105dp"
            android:onClick="onOperationClick"
            android:shadowColor="#000000"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="@string/equal"
            android:textColor="@color/white"
            android:textSize="30sp"
            app:layout_constraintLeft_toRightOf="@+id/button3comma"
            app:layout_constraintTop_toBottomOf="@+id/button29" />

        <Button
            android:id="@+id/button2sub"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="100dp"
            android:layout_height="105dp"
            android:onClick="onOperationClick"
            android:shadowColor="#000000"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="@string/sub"
            android:textColor="@color/white"
            android:textSize="30sp"
            app:layout_constraintLeft_toRightOf="@+id/button1summ"
            app:layout_constraintTop_toBottomOf="@+id/button29" />
        <Button
            android:id="@+id/button3Clear"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="100dp"
            android:layout_height="105dp"
            android:onClick="onOperationClick"
            android:shadowColor="#000000"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="@string/clear"
            android:textSize="30sp"
            app:layout_constraintLeft_toRightOf="@+id/button3comma"
            app:layout_constraintTop_toBottomOf="@+id/button3equal" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>